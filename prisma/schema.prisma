generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id              Int             @id @default(autoincrement())
  user_id         String          @unique @map("user_id")
  email           String?         @map("email")
  full_name       String?         @map("full_name")
  phone           String?         @map("phone")
  home_address    String?         @map("home_address")
  created_at      DateTime        @default(now()) @map("created_at")
  updated_at      DateTime        @updatedAt @map("updated_at")
  delivery_orders DeliveryOrder[]

  @@map("users")
}

model DeliveryOrder {
  id                  Int       @id @default(autoincrement())
  user_id             String    @map("user_id")
  tracking_id         String    @unique @map("tracking_id")
  package_title       String    @map("package_title")
  package_description String?   @map("package_description")
  delivery_address    String    @map("delivery_address")
  wants_insurance     Boolean   @default(false) @map("wants_insurance")
  status              String    @default("requested") @map("status")
  created_at          DateTime  @default(now()) @map("created_at")
  updated_at          DateTime  @updatedAt @map("updated_at")
  estimated_delivery  DateTime? @map("estimated_delivery")
  actual_delivery     DateTime? @map("actual_delivery")
  base_cargo_cost     Float?
  insurance_cost      Float?
  item_value          Float     @default(0)
  user                User      @relation(fields: [user_id], references: [user_id])

  @@map("delivery_orders")
}
